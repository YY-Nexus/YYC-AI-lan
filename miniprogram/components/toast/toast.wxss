.toast-container {
  position: fixed;
  left: 50%;
  top: 20%;
  transform: translateX(-50%);
  min-width: 180rpx;
  max-width: 80vw;
  background: rgba(0,0,0,0.85);
  color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.18);
  padding: 32rpx 40rpx;
  z-index: 9999;
  font-size: 32rpx;
  animation: fadeIn 0.3s;
}
.toast-content {
  text-align: center;
}
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
